<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity repository-class="Infrastructure\Persistence\Doctrine\OportunidadeRepository"
            name="Domain\Model\Oportunidade"
            table="oportunidade"
    >
        <id name="idOportunidade" type="integer" column="id_oportunidade">
            <generator strategy="AUTO" />
        </id>

        <field name="descricao" type="string" column="descricao"/>
        <field name="periodoInicial" type="datetime" column="periodo_inicial"/>
        <field name="periodoFinal" type="datetime" column="periodo_final"/>
        <field name="qtdVagas" type="integer" column="qtdVagas"/>

    </entity>

</doctrine-mapping>